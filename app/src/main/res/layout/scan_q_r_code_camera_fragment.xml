<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scanQRCodeCamera.ScanQRCodeCameraFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_open_qr_camera"
            android:layout_width="286dp"
            android:layout_height="0dp"
            android:layout_marginTop="204dp"
            android:layout_marginBottom="49dp"
            android:text="Scan QR Code"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_display_scan_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_display_scan_id"
            android:layout_width="254dp"
            android:layout_height="0dp"
            android:layout_marginBottom="229dp"
            android:text="TextView"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_open_qr_camera" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>