<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#56CDC2"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_view_medicine"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/text_view_medicine_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_medicine"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_medicine_name"
            android:layout_toEndOf="@id/image_view_medicine"
            android:text="Line 2" />

        <TextView
            android:id="@+id/text_view_dosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_view_medicine_name"
            android:text="0" />

        <TextView
            android:id="@+id/text_view_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_dosage"
            android:layout_toRightOf="@id/text_view_time"
            android:text="0" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>